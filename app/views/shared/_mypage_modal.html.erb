<dialog id="mypage_modal" class="modal">
  <div class="modal-box max-w-sm">
    <h3 class="font-bold text-2xl text-center mb-6" style="font-family: 'M PLUS Rounded 1c', sans-serif; font-weight: 500;">
      <span>マイページ</span>
    </h3>
    <div class="flex flex-col gap-4 items-center">
      <%= link_to edit_user_registration_path, class: "w-48 py-3 text-center border-2 border-secondary rounded-full hover:bg-secondary hover:text-white focus:outline-none" do %>
        <span class="text-base">アカウント設定</span>
      <% end %>

      <% if current_user.line_user_id.present? %>
        <%= link_to edit_notifications_path, class: "w-48 py-3 text-center border-2 border-line rounded-full hover:bg-line hover:text-white" do %>
          <span class="text-base">LINE通知設定</span>
        <% end %>
      <% else %>
        <%= link_to notifications_path, class: "w-48 py-3 text-center border-2 border-line rounded-full hover:bg-line hover:text-white" do %>
          <span class="text-base">LINE通知設定</span>
        <% end %>
      <% end %>

      <%= link_to destroy_user_session_path, data: { turbo_method: :delete, confirm: "ログアウトしますか？", turbo_confirm: "ログアウトしますか？" }, class: "w-48 py-3 text-center border-2 border-error rounded-full hover:bg-error hover:text-white text-error" do %>
        <span class="text-base">ログアウト</span>
      <% end %>
    </div>
    <div class="modal-action">
      <form method="dialog">
        <button class="btn">閉じる</button>
      </form>
    </div>
  </div>
  <!-- 背景クリックで閉じる -->
  <form method="dialog" class="modal-backdrop">
    <button>close</button>
  </form>
</dialog>