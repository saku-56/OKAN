<div class="container mx-auto px-4 py-8">
  <!-- 残薬一覧エリア -->
  <div class="leftover-medicines-section max-w-4xl mx-auto mb-8">
    <!-- ✅ 今日の日付を表示 -->
    <h2 class="text-2xl font-bold text-center mb-6">
      <%= l(Date.today, format: :long) %>
    </h2>
    
    <% if @leftover_medicines.any? %>
      <table class="table w-full bg-white shadow-md rounded-lg overflow-hidden">
        <tbody>
          <% @leftover_medicines.each do |medicine| %>
            <tr class="border-b hover:bg-gray-50">
              <td class="px-6 py-4"><%= medicine.medicine_name %></td>
              <td class="px-6 py-4 text-right">残り<%= medicine.current_stock %>錠</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p class="text-center text-gray-500 py-8">現在、残薬はありません。</p>
    <% end %>
  </div>

  <!-- カレンダー表示エリア -->
  <div class="calendar-section max-w-4xl mx-auto mb-8">
    <%= month_calendar do |date| %>
      <%= date.day %>
    <% end %>
      <!-- 後で服薬予定などを表示 -->
  </div>
  
  <!-- 登録薬管理へのリンク -->
  <div class="actions text-center">
    <%= link_to "薬の追加", registered_medicines_path, class: "btn btn-primary" %>
  </div>
</div>