<div class="min-h-screen flex items-center justify-center bg-base-100">
  <div class="card w-11/12 max-w-sm bg-base-200 shadow-lg rounded-xl p-6">
    <h2 class="text-center text-2xl font-bold text-primary mb-6">新規登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-control mb-4">
        <%= f.label :name, "名前", class: "label-text mb-1" %><br>
        <%= f.text_field :name, class: "input input-bordered bg-white" %>
      </div>

      <div class="form-control mb-4">
        <%= f.label :email, "メールアドレス", class: "label-text mb-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered bg-white" %>
      </div>

      <div class="form-control mb-4">
        <%= f.label :password, "パスワード", class: "label-text mb-1" %>
        <% if @minimum_password_length %>
          <span class="text-xs text-neutral mb-1">(<%= @minimum_password_length %> 文字以上)</span>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "input input-bordered bg-white" %>
      </div>

      <div class="form-control mb-6">
        <%= f.label :password_confirmation, "パスワード確認", class: "label-text mb-1" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input input-bordered bg-white" %>
      </div>
      <br>

      <%= f.submit "登録する", class: "btn btn-primary w-full" %>
    <% end %>
    <br>

    <p class="text-center text-sm mt-4 text-neutral">
      <%= link_to "ログインはこちら", new_user_session_path,
          class: "btn hover:bg-[#FFE4DF]" %>
    </p>

  </div>
</div>
