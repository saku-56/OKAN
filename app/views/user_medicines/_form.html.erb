<%= form_with(model: user_medicine, class: "contents") do |form| %>
  <% if user_medicine.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(user_medicine.errors.count, "error") %> prohibited this user_medicine from being saved:</h2>

      <ul class="list-disc ml-6">
        <% user_medicine.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :medicine_name %>
    <%= form.text_field :medicine_name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": user_medicine.errors[:medicine_name].none?, "border-red-400 focus:outline-red-600": user_medicine.errors[:medicine_name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :dosage_per_time %>
    <%= form.number_field :dosage_per_time, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": user_medicine.errors[:dosage_per_time].none?, "border-red-400 focus:outline-red-600": user_medicine.errors[:dosage_per_time].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :prescribed_amount %>
    <%= form.number_field :prescribed_amount, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": user_medicine.errors[:prescribed_amount].none?, "border-red-400 focus:outline-red-600": user_medicine.errors[:prescribed_amount].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :current_stock %>
    <%= form.number_field :current_stock, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": user_medicine.errors[:current_stock].none?, "border-red-400 focus:outline-red-600": user_medicine.errors[:current_stock].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :date_of_prescription %>
    <%= form.date_field :date_of_prescription, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": user_medicine.errors[:date_of_prescription].none?, "border-red-400 focus:outline-red-600": user_medicine.errors[:date_of_prescription].any?}] %>
  </div>
  
  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
