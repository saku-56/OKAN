<div class="medicines-section mx-auto mb-8">
  <h2 class="text-2xl font-bold text-center mb-6" style="font-family: 'M PLUS Rounded 1c', sans-serif; font-weight: 500;">今日の在庫</h2>
  <div class="bg-white mx-auto rounded-lg shadow mb-6">
    <% if @medicines_with_stock.any? %>
      <% @medicines_with_stock.each do |user_medicine| %>
        <% stock = user_medicine.current_stock %>
        <%= link_to user_medicine_path(user_medicine) do %>
          <div class="hover:bg-gray-50 cursor-pointer px-6 py-4 flex justify-between items-start border-b border-gray-200">
            <div class="flex items-start gap-2 flex-1 min-w-0">
              <div class="font-bold line-clamp-2">
                <%= user_medicine.medicine.name %>
              </div>
              <div class="flex-shrink-0">
                <%= stock_status_badge(stock) %>
              </div>
            </div>
            <div class="text-right flex-shrink-0 ml-4">
              <%= user_medicine.current_stock %>錠
            </div>
          </div>
        <% end %>
      <% end %>
    <% else %>
      <p class="text-center text-gray-500 py-8">服薬中の薬はありません。</p>
    <% end %>
  </div>
</div>
