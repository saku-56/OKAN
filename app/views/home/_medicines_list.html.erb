<div class="medicines-section max-w-2xl mx-auto mb-8">
  <h2 class="text-2xl font-bold text-center mb-6" style="font-family: 'M PLUS Rounded 1c', sans-serif; font-weight: 500;">今日の在庫</h2>
  <div class="bg-white mx-auto rounded-lg shadow mb-6">
  <% if @medicines_with_stock.any? %>
    <% @medicines_with_stock.each do |user_medicine| %>
      <%= link_to user_medicine_path(user_medicine) do %>
        <div class="hover:bg-gray-50 cursor-pointer px-6 py-4 flex justify-between items-center border-b border-gray-200 ">
          <% if user_medicine.current_stock > 10 %>
            <div class="font-bold">
              <%= user_medicine.medicine.name %>
            </div>
            <div class="text-right">
              残り<%= user_medicine.current_stock %>錠
            </div>
          <% else %>
            <div class="text-error font-bold">
              <%= user_medicine.medicine.name %>
            </div>
            <div class="text-right text-error">
              残り<%= user_medicine.current_stock %>錠
            </div>
          <% end %>
        </div>
      <% end %>
    <% end %>
  <% else %>
    <p class="text-center text-gray-500 py-8">服薬中の薬はありません。</p>
  <% end %>
</div>
</div>
