<div class="simple-calendar max-w-4xl mx-auto">
  <!-- ヘッダー部分（前月・次月ボタン） -->
  <div class="calendar-heading flex justify-center items-center mb-6 px-4 gap-8">
    <%= link_to t('simple_calendar.previous'), calendar.url_for_previous_view %>
    <%= l(calendar.start_date, format: "%B") %>
    <%= link_to t('simple_calendar.next'), calendar.url_for_next_view %>
  </div>

  <!-- カレンダー本体 -->
  <table class="table-auto w-full border-collapse bg-white shadow-lg rounded-lg overflow-hidden">
    <!-- 曜日ヘッダー -->
    <table class="table table-striped">
    <thead>
      <tr>
        <% date_range.slice(0, 7).each do |day| %>
          <th><%= t('date.abbr_day_names')[day.wday] %></th>
        <% end %>
      </tr>
    </thead>

    <!-- カレンダーの日付部分 -->
    <tbody>
      <% date_range.each_slice(7) do |week| %>
        <tr>
          <% week.each do |day| %>
            <%= content_tag :td, class: calendar.td_classes_for(day) do %>
              <% instance_exec(day, calendar.sorted_events_for(day), &passed_block) %>
            <% end %>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
