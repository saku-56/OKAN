<div class="bg-white rounded-lg shadow-sm p-3 mb-4">
  <h2 class="text-base font-bold text-gray-800 mb-3">診療時間</h2>

  <table class="w-full text-sm border-collapse table-fixed">
    <thead>
      <tr>
        <th class="border px-2 py-2 bg-gray-50 w-1/6">曜日</th>
        <th class="border px-2 py-2 bg-gray-50 w-5/12">午前</th>
        <th class="border px-2 py-2 bg-gray-50 w-5/12">午後</th>
      </tr>
    </thead>

    <tbody>
      <% HospitalSchedule.day_of_weeks.keys.each do |day| %>
      <tr>
        <td class="border px-2 py-2 text-center font-semibold bg-gray-50">
          <%= HospitalSchedule.day_of_weeks_i18n[day.to_sym] %>
        </td>
        <td class="border px-2 py-2 text-center text-xs">
          <%= time_range(@hospital, day, :morning) %>
        </td>
        <td class="border px-2 py-2 text-center text-xs">
          <%= time_range(@hospital, day, :afternoon) %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
