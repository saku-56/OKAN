<div class="max-w-2xl mx-auto mb-8">
  <h1 class="text-3xl text-center mb-4 mt-6" style="font-family: &quot;M PLUS Rounded 1c&quot;, sans-serif;font-weight: 500;">
    <i class="fa-solid fa-pills" style="color: rgba(255, 136, 59, 1)"></i>病院リスト
  </h1>
  <div class="bg-white max-w-4xl mx-auto rounded-lg shadow mb-6">
    <% if @hospital.any? %>
      <% @hospital.each do |hospital| %>
        <div class="flex items-center justify-between p-4 border-b hover:bg-gray-50 mb-4">
          <div class="flex items-center gap-2">
            <h3 class="font-semibold text-lg"><%= hospital.name %></h3>
          </div>
          <%= link_to "詳細", hospital_path(hospital), class: "px-4 py-2 btn btn-primary" %>
        </div>
      <% end %>
    <% else %>
      <p class="text-center py-8">現在、病院情報はありません</p>
    <% end %>
  </div>

  <div class="actions text-center">
    <%= link_to "新規登録", new_hospital_path, class: "btn bg-white text-[#E56A54] border border-[#E56A54] w-full max-w-xs" %>
  </div>
</div>